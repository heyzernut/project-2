<div class="container">

  <form action="/trips" method="post">
    <h2>Add new travel itinerary</h2>

      <div class="form-group col-md-6">
        <input type="text" class="form-control date-picker" value="10/05/2016" / data-datepicker-color="primary">
      </div>
      <div class="form-group col-md-4">
        <input type="text" class="form-control" name="trips[title]" id="title" placeholder="Title">
      </div>
      <div class="form-group col-md-4">
        <input type="text" class="form-control" name="trips[address]" id="address" placeholder="Address (Block and Street)">
      </div>
      <div class="form-group col-md-4">
        <input type="text" class="form-control" name="trips[catergory]" id="problem" placeholder="Describe your problem">
      </div>
      <div class="form-group col-md-12">
        <textarea type="text" name="issues[description]" id="description" placeholder="Describe the place"></textarea>
      </div>
      <div class="form-group col-md-12">
        <button type="submit" class="btn btn-success btn-block">
          <span class="glyphicon glyphicon-save"></span> Add Route</button>
      </div>
  </form>
</div>
